
@{
    ViewBag.Title = "ThemKhuyenMai";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<br />
<h2>Thêm chương trình khuyễn mãi</h2>
<br />
@using (Html.BeginForm("ThemKhuyenMai", "KhuyenMai", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{


<div class="form-horizontal">
        <div class="form-group">
            <lable class="control-label col-md-2">Tên SP:</lable>
            <div class="col-md-10">
                @if (!string.IsNullOrEmpty(ViewBag.KiemTraTenKM))
                {
                     <p style="color:red">@ViewBag.KiemTraTenKM</p>
                }
                <input type="text" size="70" name="TenCT" placeholder="Tên chương trình khuyễn mãi" />
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-2">Cấu hình:</lable>
            <div class="col-md-10">
                @if (!string.IsNullOrEmpty(ViewBag.KiemTraNoiDung))
                {
                    <p style="color:red">@ViewBag.KiemTraNoiDung</p>
                }
                <textarea id="NoiDungKhuyenMai" name="NoiDung" style="width:70%" placeholder="Nội dung chương trình"></textarea>
            </div>
        </div>
        <div class="form-group">
            <lable class="control-label col-md-2">Ngày bắt đầu</lable>
            <div class="col-md-10">
                @if (!string.IsNullOrEmpty(ViewBag.KiemTraNgayBatDau))
                {
                    <p style="color:red">@ViewBag.KiemTraNgayBatDau</p>
                }
                <input type="date" name="NgayBatDau" />
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-2">Ngày kết thúc</lable>
            <div class="col-md-10">
                @if (!string.IsNullOrEmpty(ViewBag.KiemTraNgayKetThuc))
                {
                    <p style="color:red">@ViewBag.KiemTraNgayKetThuc</p>
                }
                <input type="date" name="NgayKetThuc" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="padding-left:300px">
                <input type="submit" value="Lưu thông tin" class="btn btn-warning" />
            </div>
        </div>
    </div>
}
<p>
    <a href="" class="btn btn-primary" role="button" style="font-size:20px"><<</a>
</p>



