
@{
    ViewBag.Title = "Them";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h2 style="text-align:center">Thêm sản phẩm</h2>


@using (Html.BeginForm("Them", "SanPham", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @*        <div class="form-group">
                <label class="control-label col-md-2">Mã SP:</label>
                <div class="col-md-10">
                    <input type="text" size="70" name="MaSP" value="" readonly />
                </div>
            </div>*@
        <div class="form-group">
            <lable class="control-label col-md-2">Tên SP(*):</lable>
            <div class="col-md-10">
                @if (!string.IsNullOrEmpty(ViewBag.KiemTraTenSanPham))
                {
                    <p id="TenSanPhamSanPham" style="color:red">@ViewBag.KiemTraTenSanPham</p>
                }
                <input type="text" size="70" name="TenSP" value="" />
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-2">Cấu hình:(*)</lable>
            <div class="col-md-10">
                @if (!string.IsNullOrEmpty(ViewBag.KiemTraCauHinh))
                {
                    <p id="CauHinhSanPham" style="color:red">@ViewBag.KiemTraCauHinh</p>
                }
            <textarea id="CauHinhSanPham" name="CauHinh" style="width:70%" placeholder="Cấu hình sản phẩm"></textarea>
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-2">Ảnh bìa(*)</lable>
            <div class="col-md-10">
                @if (!string.IsNullOrEmpty(ViewBag.KiemTraAnh))
                {
                    <p id="AnhSanPham" style="color:red">@ViewBag.KiemTraAnh</p>
                }
                <input type="file" name="fFileUpload" />
                @ViewBag.ThongBao
                <img src="" style="width: 120px" />(*.png)
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-2">Mô tả</lable>
            <div class="col-md-10">
                <textarea id="MoTaSanPham" name="Mota" style="width:70%"></textarea>
            </div>
        </div>


        <div class="form-group">
            <lable class="control-label col-md-2">Số lượng(*)</lable>
            <div class="col-md-10">
                @if (!string.IsNullOrEmpty(ViewBag.KiemTraSoLuong))
                {
                    <p  id="SoLuongSanPham" style="color:red">@ViewBag.KiemTraSoLuong</p>
                }
                <input type="number" name="SoLuongTon" value="" />
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-2">Giá bán(*)</lable>
            <div class="col-md-10">
                @if (!string.IsNullOrEmpty(ViewBag.KiemTraDonGia))
                {
                    <p  id="DonGiaSanPham"style="color:red">@ViewBag.KiemTraDonGia</p>
                }
                <input type="number" name="DonGia" value="" />
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-2">Nhà cung cấp</lable>
            <div class="col-md-10">
                @Html.DropDownList("MaNCC")
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-2">Nhà sản xuất</lable>
            <div class="col-md-10">
                @Html.DropDownList("MaNSX")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="padding-left:300px">
                <input id="btnThemSanPham" type="submit" value="Thêm sản phẩm" class="btn btn-warning" />
            </div>
        </div>
    </div>
}
<p>
    <a href="@ViewBag.Url" class="btn btn-primary" role="button" style="font-size:20px"><<</a>
</p>
