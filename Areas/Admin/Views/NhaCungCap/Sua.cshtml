@model Electro.Models.NhaCungCap
@{
    ViewBag.Title = "Sua";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">Cập nhật Nhà Cung Cấp</h2>


@using (Html.BeginForm("Sua", "NhaCungCap", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Mã NCC:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="MaNCC" value="@Model.MaNCC" readonly />
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-2">Tên NCC:</lable>
            <div class="col-md-10">
                <input type="text" size="70" name="TenNCC" value="@Model.TenNCC" />
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-2">Địa Chỉ:</lable>
            <div class="col-md-10">
                <input type="text" size="70" name="DiaChi" value="@Model.DiaChi" />
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-2">Email</lable>
            <div class="col-md-10">
                <input type="text" size="70" name="Email" value="@Model.Email" />
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-2">Điện Thoại:</lable>
            <div class="col-md-10">
                <input type="text" size="70" name="DienThoai" value="@Model.DienThoai" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu thông tin" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<p>
    <a href="@ViewBag.Url" class="btn btn-primary" role="button" style="font-size:20px"><<</a>
</p>
