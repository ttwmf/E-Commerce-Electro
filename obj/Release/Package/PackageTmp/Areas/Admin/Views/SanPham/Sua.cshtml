
@model Electro.Models.SanPham
@{
    ViewBag.Title = "Sua";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h2 style="text-align:center">Cập nhật sản phẩm</h2>

@using (Html.BeginForm("Sua", "SanPham", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Mã SP:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="MaSP" value="@Model.MaSP" readonly />
        </div>
    </div>
    <div class="form-group">
        <lable class="control-label col-md-2">Tên SP:</lable>
        <div class="col-md-10">
            <input type="text" size="70" name="TenSP" value="@Model.TenSP" />
        </div>
    </div>

    <div class="form-group">
        <lable class="control-label col-md-2">Cấu hình:</lable>
        <div class="col-md-10">
            <textarea name="CauHinh" style="width:70%">@Model.CauHinh</textarea>
        </div>
    </div>

    <div class="form-group">
        <lable class="control-label col-md-2">Ảnh bìa</lable>
        <div class="col-md-10">
            <input type="file" name="fFileUpload" />
            @ViewBag.ThongBao
            <img src="~/img/@Model.HinhAnh" style="width: 120px" />(Ảnh hiện tại)
        </div>
    </div>

    <div class="form-group">
        <lable class="control-label col-md-2">Mô tả</lable>
        <div class="col-md-10">
            <textarea name="Mota" style="width:70%">@Model.MoTa</textarea>
        </div>
    </div>


    <div class="form-group">
        <lable class="control-label col-md-2">Số lượng</lable>
        <div class="col-md-10">
            <input type="number" min="1" required name="SoLuongTon" value="@Model.SoLuongTon" />
        </div>
    </div>

    <div class="form-group">
        <lable class="control-label col-md-2">Giá bán</lable>
        <div class="col-md-10">
            <input type="number" min="1" required name="DonGia" value="@Model.DonGia" />
        </div>
    </div>

    <div class="form-group">
        <lable class="control-label col-md-2">Nhà cung cấp</lable>
        <div class="col-md-10">
            @Html.DropDownList("MaNCC")
        </div>
    </div>

    <div class="form-group">
        <lable class="control-label col-md-2">Nhà sản xuất</lable>
        <div class="col-md-10">
            @Html.DropDownList("MaNSX")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" style="padding-left:300px">
            <input type="submit" value="Lưu thông tin" class="btn btn-warning" />
        </div>
    </div>
</div>
}
<p>
    <a href="@ViewBag.Url" class="btn btn-primary" role="button" style="font-size:20px"><<</a>
</p>
