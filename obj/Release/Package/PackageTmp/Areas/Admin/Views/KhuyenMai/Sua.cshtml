
@{
    ViewBag.Title = "Sua";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa chương trình khuyễn mãi</h2>
<br />
@using (Html.BeginForm("Sua", "KhuyenMai", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
<div class="form-horizontal">
    <div class="form-group">
        <lable class="control-label col-md-2">Mã chương trình:</lable>
        <div class="col-md-10">
            <input type="text" size="70" name="MaKM"  value="@Model.MaKM" readonly />
        </div>
    </div>
    <div class="form-group">
        <lable class="control-label col-md-2">Tên Chương trình:</lable>
        <div class="col-md-10">
            <input type="text" size="70" name="TenCT" placeholder="Tên chương trình khuyễn mãi" value="@Model.TenChuongTrinh" />
        </div>
    </div>

    <div class="form-group">
        <lable class="control-label col-md-2">Nội dung:</lable>
        <div class="col-md-10">
            <textarea name="NoiDung" style="width:70%" placeholder="Nội dung chương trình">@Model.NoiDung</textarea>
        </div>
    </div>
    <div class="form-group">
        <lable class="control-label col-md-2">Ngày bắt đầu</lable>
        <div class="col-md-10">
            <input type="date" name="NgayBatDau" value="@Html.FormatValue(Model.NgayBatDau, "{0:yyyy-MM-dd}")" required />
        </div>
    </div>

    <div class="form-group">
        <lable class="control-label col-md-2">Ngày kết thúc</lable>
        <div class="col-md-10">
            <input type="date" name="NgayKetThuc" value="@Html.FormatValue(Model.NgayKetThuc, "{0:yyyy-MM-dd}")" required />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" style="padding-left:300px">
            <input type="submit" value="Cập nhật" class="btn btn-warning" />
        </div>
    </div>
</div>
}
<p>
    <a href="" class="btn btn-primary" role="button" style="font-size:20px"><<</a>
</p>


