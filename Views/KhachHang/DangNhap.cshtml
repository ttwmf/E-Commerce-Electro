
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutKhachHang.cshtml";
}


<style type="text/css">
    td {
        height: 40px;
    }

    .login {
        background-color: whitesmoke;
    }

</style>
<h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>

<section class="containerdm">
    <div class="login">
        <h1>Đăng nhập</h1>
        @using (Html.BeginForm())
        {
            <p><input type="text" name="TenDN" value="" placeholder="Tên đăng nhập"></p>
            <p><input type="password" name="MatKhau" value="" placeholder="Mật khẩu"></p>
            <p class="remember_me">
                <label>
                    <input type="checkbox" name="remember_me" id="remember_me">
                    Lưu thông tin đăng nhập
                </label>
            </p>
            <p class="submit"><input type="submit" name="commit" value="Đăng nhập"></p>
        }
    </div>

    <div class="login-help">
        <p>Chưa có tài khoản? <a href="@Url.Action("DangKy", "KhachHang")">Đăng ký</a>.</p>
    </div>
</section>
